@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-lg-12">
            <!-- Change password card-->
            <div class="container mt-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-7">
                        <div class="card p-3 py-4">
                            <div class="text-center mt-3">
                                <h5 class="mt-2 mb-0">@ViewBag.Name</h5>
                                <span>@ViewBag.Username</span>
                                <div class="px-4 mt-1">
                                    <p class="fonts">@ViewBag.Mail </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="card mb-5">
                <div class="card-header"><h6>Yazarın Açtığı Başlıklar</h6></div>
                <div class="card-body">
                    @await Component.InvokeAsync("_ProfileTitles", new {id = ViewBag.ID})
                </div>
            </div>
            <div class="card mb-5">
                <div class="card-header"><h6>Yazarın Yorumları</h6></div>
                <div class="card-body">
                    @await Component.InvokeAsync("_ProfileComments", new {id = ViewBag.ID})
                </div>
            </div>

            <!-- Security preferences card-->
        </div>
    </div>
</div>

