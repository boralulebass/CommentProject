@model IPagedList<Title>

<table class="table table-hover">
    @ViewBag.message
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TitleName </td>
            <td><a href="/WriterComment/CommentsByTitle/@item.TitleID/" class="btn btn-outline-warning btn-sm">Yorumları Görüntüle</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("/Components/_ProfileTitles/",new {page}))
