@model IPagedList<Comment>

<table class="table table-hover">
    @ViewBag.message
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title.Category.CategoryName</td>
            <td><a href="/WriterComment/CommentsByTitle/@item.TitleID/">@item.Title.TitleName</a></td>
            <td>@item.CommentDetails</td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("_ProfileComments",new {page}))